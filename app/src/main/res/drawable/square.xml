<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#096876"
                android:endColor="#04343B"    android:angle="45"></gradient>

            <corners android:radius="15dp"/>
            <padding android:bottom="5pt" android:left="6pt" android:right="10pt" android:top="7pt" >
            </padding>
            <storke android:color="#ffffff" android:width="7dp" ></storke>

        </shape>

    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="15dp"/>
            <padding android:bottom="5pt" android:left="6pt" android:right="10pt" android:top="7pt" >
            </padding>
            <solid android:color="#096876"/>
            <storke android:color="#ffffff" android:width="7dp" ></storke>

        </shape>
    </item>
</selector>